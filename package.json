{
  "name": "widget-github-electron",
  "version": "1.0.0",
  "description": "GitHub activity widget for desktop",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc && npm run copy-files",
    "copy-files": "mkdir -p dist/renderer && cp src/renderer/index.html dist/renderer/ && cp src/renderer/styles.css dist/renderer/",
    "start": "npm run build && electron .",
    "dev": "npm run build && electron .",
    "watch": "tsc --watch"
  },
  "keywords": [
    "electron",
    "github",
    "widget",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.11.0",
    "electron": "^40.4.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "dotenv": "^16.4.1"
  }
}